{% extends 'base.html.twig' %}

{% block title %}Detalles del Cliente{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 mb-4">Detalles del Cliente</h1>

        <div class="row">
            <div class="col-md-6">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th scope="row" style="width: 40%;">Id</th>
                        <td>{{ cliente.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Nombre de Usuario</th>
                        <td>{{ cliente.username }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Roles</th>
                        <td>{{ cliente.roles ? cliente.roles|json_encode : 'Sin roles' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Contrase√±a</th>
                        <td>{{ cliente.password }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <a href="{{ path('app_cliente_index') }}" class="btn btn-secondary">Volver a la lista</a>
        <a href="{{ path('app_cliente_edit', {'id': cliente.id}) }}" class="btn btn-primary">Editar</a>

        {{ include('cliente/_delete_form.html.twig') }}
    </div>
{% endblock %}
